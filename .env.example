# Environment Configuration
ENVIRONMENT=development  # Options: development, staging, production

# Database Configuration
# For SQLite (Development)
DATABASE_URL=sqlite:///./jiva_plants.db

# For PostgreSQL (Production)
# DATABASE_URL=postgresql://user:password@localhost:5432/jivaplants

# Security
SECRET_KEY=your-secret-key-change-in-production-use-openssl-rand-hex-32
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# CORS Settings
CORS_ALLOW_ALL_ORIGINS=true  # Set to false in production
CORS_ALLOW_CREDENTIALS=true
CORS_MAX_AGE=600

# Application
PROJECT_NAME=Jiva Plants API
VERSION=1.0.0

# Optional: PostgreSQL specific (if using PostgreSQL)
# POSTGRES_USER=jivaplants
# POSTGRES_PASSWORD=your-secure-password
# POSTGRES_DB=jivaplants
# POSTGRES_HOST=localhost
# POSTGRES_PORT=5432

# Optional: Image Storage Settings
# MAX_UPLOAD_SIZE_MB=10
# UPLOAD_RETENTION_DAYS=30
# CLEANUP_INTERVAL_HOURS=24

# Optional: ML Model Settings
# MODEL_CACHE_DIR=./models
# ENABLE_GPU=false
